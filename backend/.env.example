# Copy this file to .env and fill in your values.
# For Vercel: add these same variables in Project → Settings → Environment Variables.

# Database (Supabase Postgres) - required for Vercel
# DATABASE_URL: use pooler (port 6543, ?pgbouncer=true) for runtime. DIRECT_URL: use Session mode / direct (port 5432) for migrations.
DATABASE_URL="postgresql://postgres.PROJECT_REF:PASSWORD@REGION.pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.PROJECT_REF:PASSWORD@db.PROJECT_REF.supabase.co:5432/postgres"

# JWT - required for Vercel
JWT_SECRET=use-a-long-random-string-in-production
JWT_EXPIRES_IN=7d

# App
NODE_ENV=development
PORT=3001
API_PREFIX=api

# Supabase Storage (optional - for contribution attachments)
SUPABASE_URL=https://PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_service_role_key_for_signed_urls

# Frontend URL (CORS) - set to your Vercel app URL in production
FRONTEND_URL=http://localhost:5173
